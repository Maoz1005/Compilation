import java_cup.runtime.*;
import AST.*;
import TYPES.*;

parser code 
{:
	public Lexer lexer;

	public Parser(Lexer lexer)
	{
		super(lexer);
		this.lexer = lexer;
	}
	public void report_error(String message, Object info)
	{
		int lineNumber = lexer.getLine();

		System.out.print("ERROR >> ");		
		System.out.print("[");
		System.out.print(lineNumber);
		System.out.print(":");
		System.out.print(lexer.getCharPos());
		System.out.print("] ");

		Main.writeStatusToFile(lineNumber, "ERROR", Main.outputFilename);
		System.err.println("Exiting program post-cup error...");
		System.exit(0);
	}
:}

/************************/
/* CUSTOMIZE CUP PARSER */
/************************/
scan with
{:
	Symbol s;
	s = lexer.next_token();
	//System.out.print(s.sym);
	System.out.print("[");
	System.out.print(lexer.getLine());
	System.out.print(":");
	System.out.print(lexer.getCharPos());
	System.out.print("] ");
	System.out.print(TokenNames.terminalNames[s.sym]);
	if (s.value != null)
	{
		System.out.print("( ");
		System.out.print(s.value);
		System.out.print(" )");
	}
	System.out.print("\n");
	return s; 
:};

