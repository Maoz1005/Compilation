/* TERMINALS */
/*************/
terminal IF;
terminal EQ;
terminal DOT;
terminal PLUS;
terminal MINUS;
terminal TIMES;
terminal WHILE;
terminal DIVIDE;
terminal LPAREN;
terminal RPAREN;
terminal LBRACK;
terminal RBRACK;
terminal LBRACE;
terminal RBRACE;
terminal SEMICOLON;
terminal ASSIGN;
terminal NIL;
terminal COMMA;
terminal TYPE_INT;
terminal TYPE_VOID;
terminal TYPE_STRING;
terminal ARRAY;
terminal CLASS;
terminal EXTENDS;
terminal RETURN;
terminal LT;
terminal GT;
terminal NEW;
// terminal EOF;
terminal empty;

/*************/
/* TERMINALS */
/*************/
terminal Integer INT;
terminal String ID;
terminal String STRING;

/**************************/
/* SPECIAL ERROR TERMINAL */
/**************************/
terminal ERROR;

/*****************/
/* NON TERMINALS */
/*****************/
non terminal AST_PROGRAM program;
non terminal AST_DEC dec;
non terminal AST_TYPE type;
non terminal AST_VARDEC varDec;
non terminal AST_FUNCDEC funcDec;
non terminal AST_CLASSDEC classDec;
non terminal AST_DEC_ARRAYTYPEDEF arrayTypedef;
non terminal AST_EXP exp;
non terminal AST_VAR var;
non terminal AST_STMT stmt;
non terminal AST_NEWEXP newExp;
non terminal AST_CFIELD cField;
non terminal BINOP binop;

/************************/
/* HELPER NON TERMINALS */
/************************/
non terminal AST_STMT_LIST stmtList;
non terminal NODE_LIST<AST_DEC> dec_plus;
non terminal NODE_LIST<AST_FUNCPARAM> c_t_id_star;
non terminal NODE_LIST<AST_CFIELD> cFieldList;
non terminal NODE_LIST<AST_EXP> c_exp_star;

/***********************/
/* OPERATOR PRECEDENCE */
/***********************/
// Note: Lower in the list = Higher precedence.
precedence left ASSIGN;
precedence left EQ;
precedence left LT;
precedence left GT;
precedence left PLUS;
precedence left MINUS;
precedence left TIMES;
precedence left DIVIDE;
// precedence left RBRACK;
precedence left LBRACK;
// precedence left RPAREN;
precedence left LPAREN;
precedence left DOT;


start with program;

/********************/
/* DERIVATION RULES */
/********************/
program		::=		dec_plus:dPlus {: RESULT = new AST_PROGRAM(dPlus, dPlusleft); :}
					;

	// One or more times
	dec_plus	::=		dec:d {: RESULT = new NODE_LIST<AST_DEC>(d, null); :}
						| dec:d dec_plus:dStar {: RESULT = new NODE_LIST<AST_DEC>(d, dStar); :}
						;

dec			::=		varDec:v {: RESULT = v; :}
					| funcDec:f {: RESULT = f; :}
					| classDec:c {: RESULT = c; :}
					| arrayTypedef:a {: RESULT = a; :}
					;


type		::=		TYPE_INT:t {: RESULT = new AST_TYPE(PRIMITIVE.INT.label, tleft); :}
					| TYPE_STRING:t {: RESULT = new AST_TYPE(PRIMITIVE.STRING.label, tleft); :}
					| TYPE_VOID:t {: RESULT = new AST_TYPE(PRIMITIVE.VOID.label, tleft); :}
					| ID:name {: RESULT = new AST_TYPE(name, nameleft); :}
					;

// Notice how "?" is treated here
varDec		::=		type:t ID:name SEMICOLON {: RESULT = new AST_VARDEC(t, name, tleft); :}
					| type:t ID:name ASSIGN exp:e SEMICOLON {: RESULT = new AST_VARDEC(t, name, e, tleft); :}
					| type:t ID:name ASSIGN newExp:newE SEMICOLON {: RESULT = new AST_VARDEC(t, name, newE, tleft); :}
					;

funcDec		::=		type:t ID:id LPAREN RPAREN LBRACE stmtList:stmtStar RBRACE
                        {: RESULT = new AST_FUNCDEC(t, id, null, stmtStar, tleft); :}
					| type:tFunc ID:idFunc LPAREN type:tParam ID:idParam c_t_id_star:paramStar RPAREN LBRACE stmtList:stmtStar RBRACE
					    {: RESULT = new AST_FUNCDEC(
					        tFunc,
					        idFunc,
					        new NODE_LIST<AST_FUNCPARAM>(new AST_FUNCPARAM(tParam, idParam, paramStarleft), paramStar), /* yup */
					        stmtStar,  //                                                  ^ TODO: Dekel: There used to be an additional "tFunc" argument here but I removed it, Neri pls confirm this is fine
					        tFuncleft);
					        :}
					;

	// Could potentially be zero times
	c_t_id_star	::=		/* empty */ {: RESULT = null; :}
						| COMMA:c type:t ID:id c_t_id_star:star
						    {: RESULT = new NODE_LIST<AST_FUNCPARAM>(new AST_FUNCPARAM(t, id, cleft), star); :} /* yeah */
						;


classDec	::=		CLASS:c ID:id LBRACE cFieldList:fields RBRACE {: RESULT = new AST_CLASSDEC(id, fields, cleft); :}
					| CLASS:c ID:id EXTENDS ID:supercls LBRACE cFieldList:fields RBRACE
					    {: RESULT = new AST_CLASSDEC(id, supercls, fields, cleft); :}
					;

    cFieldList ::= cField:f cFieldList:star {: RESULT = new NODE_LIST<AST_CFIELD>(f, star); :}
                   | cField:f {: RESULT = new NODE_LIST<AST_CFIELD>(f, null); :}
                   ;

arrayTypedef	::=	ARRAY:a ID:id EQ type:type LBRACK RBRACK SEMICOLON {: RESULT = new AST_DEC_ARRAYTYPEDEF(id, type, aleft); :}
					;

exp			::=		var:v {: RESULT = new AST_EXP_VAR(v, vleft); :}
					| LPAREN exp:e RPAREN {: RESULT = e; :}
					| exp:l binop:op exp:r {: RESULT = new AST_EXP_BINOP(l, op, r, lleft); :}
					| ID:funcName LPAREN RPAREN {: RESULT = new AST_EXP_FUNC(funcName, funcNameleft); :}
					| ID:funcName LPAREN exp:e c_exp_star:eStar RPAREN
					    {: RESULT = new AST_EXP_FUNC(funcName, new NODE_LIST<AST_EXP>(e, eStar), funcNameleft); :}
					| var:v DOT ID:funcName LPAREN RPAREN {: RESULT = new AST_EXP_METHOD(v, funcName, vleft); :}
					| var:v DOT ID:funcName LPAREN exp:e c_exp_star:eStar RPAREN
					    {: RESULT = new AST_EXP_METHOD(v, funcName, new NODE_LIST<AST_EXP>(e, eStar), vleft); :}
					| INT:i	{: RESULT = new AST_EXP_INT(i, ileft);          :}
					| MINUS:m INT:i {: RESULT = new AST_EXP_INT(-i, mleft);          :}
					| NIL:n {: RESULT = new AST_EXP_NIL(nleft); :}
					| STRING:v {: RESULT = new AST_EXP_STRING(v,vleft); :}
					;

	c_exp_star	::=		/* empty */ {: RESULT = null; :}
						| COMMA exp:e c_exp_star:eStar {: RESULT = new NODE_LIST<AST_EXP>(e, eStar); :}
						;

var			::=		ID:name								{: RESULT = new AST_VAR_SIMPLE(name, nameleft);       :}
					| var:v DOT ID:fieldName			{: RESULT = new AST_VAR_FIELD(v,fieldName, vleft); :}
					| var:v LBRACK exp:e RBRACK			{: RESULT = new AST_VAR_SUBSCRIPT(v,e, vleft);     :}
					;
					
stmt		::=		varDec:d {: RESULT = new AST_STMT_VARDEC(d, dleft); :}
					| var:v ASSIGN exp:e SEMICOLON	{: RESULT = new AST_STMT_ASSIGN(v,e,vleft); :}
					| var:v ASSIGN newExp:e SEMICOLON  {: RESULT = new AST_STMT_ASSIGN(v,e,vleft); :}
					| RETURN:r SEMICOLON {: RESULT = new AST_STMT_RETURN(rleft); :}
					| RETURN:r exp:e SEMICOLON {: RESULT = new AST_STMT_RETURN(e, rleft); :}
					| IF:i    LPAREN exp:cond RPAREN LBRACE stmtList:body RBRACE	{: RESULT = new AST_STMT_IF(cond,body,ileft); :}
					| WHILE:w LPAREN exp:cond RPAREN LBRACE stmtList:body RBRACE	{: RESULT = new AST_STMT_WHILE(cond,body,wleft); :}
					| ID:id LPAREN RPAREN SEMICOLON {: RESULT = new AST_STMT_FUNC(id,idleft); :}
					| ID:id LPAREN exp:e c_exp_star:eStar RPAREN SEMICOLON
					    {: RESULT = new AST_STMT_FUNC( id, new NODE_LIST<AST_EXP>(e, eStar),idleft); :}
					| var:v DOT ID:field LPAREN RPAREN SEMICOLON {: RESULT = new AST_STMT_METHOD(v, field, vleft); :}
					| var:v DOT ID:field LPAREN exp:e c_exp_star:eStar RPAREN SEMICOLON
					    {: RESULT = new AST_STMT_METHOD(v, field, new NODE_LIST<AST_EXP>(e, eStar),vleft); :}
					;

	// Essentially (stmt)+
	stmtList	::=		stmt:s	stmtList:l		{: RESULT = new AST_STMT_LIST(s,l,sleft);    :}
						| stmt:s				{: RESULT = new AST_STMT_LIST(s,null,sleft); :}
						;

newExp		::=		NEW:n type:t {: RESULT = new AST_NEWEXP(t,nleft); :}
					| NEW:n type:t LBRACK exp:e RBRACK {: RESULT = new AST_NEWEXP(t, e, nleft); :}
					;

cField		::=		varDec:v {: RESULT = new AST_CFIELD_VAR(v,vleft); :}
					| funcDec:f {: RESULT = new AST_CFIELD_FUNC(f,fleft); :}
					;

binop		::=		PLUS {: RESULT = BINOP.PLUS; :}
					| MINUS {: RESULT = BINOP.MINUS; :}
					| TIMES {: RESULT = BINOP.TIMES; :}
					| DIVIDE {: RESULT = BINOP.DIVIDE; :}
					| LT {: RESULT = BINOP.LT; :}
					| GT {: RESULT = BINOP.GT; :}
					| EQ {: RESULT = BINOP.EQ; :}
					;

// "LEFT" Explanation:
// ------------------
// "For each label, two more variables accessible to the user are declared. A left and right value labels are passed to
// the code string, so that the user can find out where the left and right side of each terminal or non-terminal is in
// the input stream. The name of these variables is the label name, plus left or right. for example, given the right
// hand side of a production expr:e1 PLUS expr:e2 the user could not only access variables e1 and e2, but also e1left,
// e1right, e2left and e2right. these variables are of type int."
